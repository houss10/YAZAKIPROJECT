@model WebsiteCms.Models.ADocumentModel
@{
	ViewData["Title"] = "Document details";
}
<h2>Document details</h2>
<dl class="row">
	<dt class="col-sm-3">Category</dt><dd class="col-sm-9">@Model.Category</dd>
	<dt class="col-sm-3">Number</dt><dd class="col-sm-9">@Model.Number</dd>
	<dt class="col-sm-3">Title</dt><dd class="col-sm-9">@Model.Title</dd>
	<dt class="col-sm-3">Control #</dt><dd class="col-sm-9">@Model.ControlNumber</dd>
	<dt class="col-sm-3">Control URL</dt><dd class="col-sm-9">@Model.ControlNumberUrl</dd>
	<dt class="col-sm-3">Related</dt><dd class="col-sm-9">@Model.RelatedDocument</dd>
	<dt class="col-sm-3">Related URL</dt><dd class="col-sm-9">@Model.RelatedDocumentUrl</dd>
	<dt class="col-sm-3">Issue</dt><dd class="col-sm-9">@Model.Issue</dd>
	<dt class="col-sm-3">Issue Date</dt><dd class="col-sm-9">@Model.IssueDate.ToString("dd-MM-yyyy")</dd>
</dl>
<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
<a class="btn btn-secondary" asp-action="Index" asp-route-category="@Model.Category">Back</a>