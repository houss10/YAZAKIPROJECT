@model WebsiteCms.Models.ADocumentModel

@{
    ViewData["Title"] = "Create Document";
    Layout = "~/Views/Shared/_Layout.cshtml"; // ✅ reuse your front layout
}

<h2>Create Document</h2>

<form asp-action="Create" asp-controller="Documents" asp-area="Admin" method="post">
    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="Category" class="form-label"></label>
            <input asp-for="Category" class="form-control" placeholder="e.g., TD-TPMEP2" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="Number" class="form-label"></label>
            <input asp-for="Number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="ControlNumber" class="form-label"></label>
            <input asp-for="ControlNumber" class="form-control" />
            <span asp-validation-for="ControlNumber" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="ControlNumberUrl" class="form-label"></label>
            <input asp-for="ControlNumberUrl" class="form-control" />
            <span asp-validation-for="ControlNumberUrl" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="RelatedDocument" class="form-label"></label>
            <input asp-for="RelatedDocument" class="form-control" />
            <span asp-validation-for="RelatedDocument" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="RelatedDocumentUrl" class="form-label"></label>
            <input asp-for="RelatedDocumentUrl" class="form-control" />
            <span asp-validation-for="RelatedDocumentUrl" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Issue" class="form-label"></label>
            <input asp-for="Issue" class="form-control" />
            <span asp-validation-for="Issue" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="IssueDate" class="form-label"></label>
            <input asp-for="IssueDate" type="date" class="form-control" />
            <span asp-validation-for="IssueDate" class="text-danger"></span>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" asp-controller="Documents" asp-area="Admin" asp-route-category="@Model.Category" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
