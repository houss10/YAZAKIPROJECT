@model IEnumerable<WebsiteCms.Models.ADocumentModel>
@{
    ViewData["Title"] = "Documents";
    var category = (string?)ViewBag.Category;
}
<h2 class="mb-3">Documents @if(!string.IsNullOrWhiteSpace(category)){
<text> — @category</text>
}
</h2>

<div class="mb-3">
    <form method="get" class="d-flex gap-2">
        <input name="category" class="form-control" placeholder="Filter by category (e.g., TD-TPMEP2)" value="@category" />
        <button class="btn btn-primary" type="submit">Filter</button>
        <a class="btn btn-secondary" asp-area="Admin" asp-controller="Documents" asp-action="Index">Clear</a>
        <a class="btn btn-success ms-auto" asp-area="Admin" asp-controller="Documents" asp-action="Create" asp-route-category="@category">Create</a>
    </form>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Category</th>
            <th style="width:5%">N°</th>
            <th>Title</th>
            <th>Control #</th>
            <th>Related Doc</th>
            <th style="width:10%">Issue</th>
            <th style="width:12%">Issue Date</th>
            <th style="width:14%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.Category</td>
                <td>@d.Number</td>
                <td>@d.Title</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(d.ControlNumberUrl))
                    {
                        <a href="@d.ControlNumberUrl" target="_blank">@d.ControlNumber</a>
                    }
                    else
                    {

                        @d.ControlNumber
                    }
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(d.RelatedDocumentUrl))
                    {
                        <a href="@d.RelatedDocumentUrl" target="_blank">@d.RelatedDocument</a>
                    }
                    else
                    {

                        @d.RelatedDocument
                    }
                </td>
                <td>@d.Issue</td>
                <td>@d.IssueDate.ToString("dd-MM-yyyy")</td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@d.Id">Details</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@d.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@d.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
